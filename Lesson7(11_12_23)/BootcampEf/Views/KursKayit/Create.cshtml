@model KursKayit

<h2>Kurs Kayıt Ekle</h2>

<form asp-controller="KursKayit" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="OgrenciId" class="form-label">Öğrenci</label>
        <select asp-items="ViewBag.Ogrenciler" asp-for="OgrenciId" class="form-control">
            <option value="">Seçiniz</option>
        </select>

    </div>
    <div class="mb-3">
        <label asp-for="KursId" class="form-label">Kurs</label>
        <select asp-items="ViewBag.Kurslar" asp-for="KursId" class="form-control">
            <option value="">Seçiniz</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>

</form>
